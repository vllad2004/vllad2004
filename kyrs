#include <iostream>
#include "tchar.h"
using namespace std;

char board[9] = { '-','-', '-', '-', '-', '-', '-', '-', '-' };//массив поля

bool has_won(char player)//умова виграшу
{
	int wins[][3] = { {0,1,2},{3,4,5},{6,7,8},{0,3,6},{1,4,7},{2,5,8},{0,4,8},{2,4,6} };
	for (int i = 0; i < 8; i++)
	{
		int count = 0;
		for (int j = 0; j <= 2; j++)
		{
			if (board[wins[i][j]] == player)
				count++;
			if (count == 3)
				return true;
		}
	}
	return false;
}

void print_board()//виведення поля
{
	cout << "Игрове поле\n";
	cout << "-" << board[6] << "-|-" << board[7] << "-|-" << board[8] << "-\n";
	cout << "-" << board[3] << "-|-" << board[4] << "-|-" << board[5] << "-\n";
	cout << "-" << board[0] << "-|-" << board[1] << "-|-" << board[2] << "-\n";
	cout << "Ваш хид:\n";
}

int get_move()
{
	system("cls");
	setlocale(0, "ru");
	//підказка
	cout << "Управлиння\n";
	cout << "-7-|-8-|-9-\n";
	cout << "-4-|-5-|-6-\n";
	cout << "-1-|-2-|-3-\n";
	cout << endl;

	print_board();

	int move;
	cin >> move;
	while (move > 9 || move < 1 || board[move - 1] != '-') //перевірка введеного числа
	{
		cout << "Ведить инше чысло (1-9)\n";
		cin >> move;
	}
	return move;

}

char play()//гра та перевірка комбінацій
{

	int turn = 0;
	while (!has_won('X') && !has_won('O') && turn < 9)
	{
		int move = get_move();
		if (turn % 2 == 0)
		{
			board[move - 1] = 'X';
			if (has_won('X'))
			{
				cout << "Виграв гравець 'X'!\n";
				return 'X';
			}
		}
		else
		{
			board[move - 1] = 'O';
			if (has_won('O'))
			{
				cout << "Виграв гравець 'O'!\n";
				return 'O';
			}
		}

		turn++;
	}
	cout << "Ничыя :(\n";
	return 'D';
}

int _tmain(int argc, _TCHAR* argv[])
{
	system("Title TicTacToe");
	system("color 2");

	play();
	int a;
	cin >> a;
	return 0;
}
